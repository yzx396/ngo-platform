{
	"name": "platform",
	"description": "lead-forward platform",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "tsc -b && vite build",
		"cf-typegen": "wrangler types",
		"check": "tsc && vite build && wrangler deploy --dry-run --env=\"\"",
		"deploy": "wrangler deploy --env=\"\" && npm run db:migrate:prod",
		"dev": "vite dev",
		"db:migrate": "wrangler d1 migrations apply platform-db --local",
		"db:migrate:prod": "wrangler d1 migrations apply platform-db --remote",
		"db:list": "wrangler d1 migrations list platform-db --local",
		"db:list:prod": "wrangler d1 migrations list platform-db --remote",
		"db:schema": "npx wrangler d1 execute platform-db-local --local --env local --command=\"SELECT sql FROM sqlite_master WHERE type='table' ORDER BY name;\"",
		"db:schema:prod": "npx wrangler d1 execute platform-db --command=\"SELECT sql FROM sqlite_master WHERE type='table' ORDER BY name;\"",
		"db:seed": "tsx scripts/seed-mentors.ts",
		"db:seed:leaderboard": "tsx scripts/seed-leaderboard.ts",
		"db:seed:posts": "tsx scripts/seed-posts.ts",
		"lint": "eslint .",
		"preview": "npm run build && vite preview",
		"quality-check": "npm run lint -- --fix && npm test && npm run build",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest --ui"
	},
	"dependencies": {
		"@hookform/resolvers": "^5.2.2",
		"@radix-ui/react-avatar": "^1.1.11",
		"@radix-ui/react-checkbox": "^1.3.3",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-label": "^2.1.8",
		"@radix-ui/react-separator": "^1.1.8",
		"@radix-ui/react-slider": "^1.3.6",
		"@radix-ui/react-slot": "^1.2.4",
		"@tailwindcss/typography": "^0.5.19",
		"@tiptap/extension-link": "^3.10.7",
		"@tiptap/extension-placeholder": "^3.10.7",
		"@tiptap/react": "^3.10.7",
		"@tiptap/starter-kit": "^3.10.7",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"dompurify": "^3.3.0",
		"hono": "^4.10.6",
		"i18next": "^25.6.2",
		"i18next-browser-languagedetector": "^8.2.0",
		"jose": "^6.1.2",
		"lucide-react": "^0.554.0",
		"nanoid": "^5.1.6",
		"react": "19.2.0",
		"react-dom": "19.2.0",
		"react-hook-form": "^7.66.1",
		"react-i18next": "^16.3.3",
		"react-router-dom": "^7.9.6",
		"sonner": "^2.0.7",
		"tailwind-merge": "^3.4.0",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "1.14.2",
		"@cloudflare/vitest-pool-workers": "^0.10.7",
		"@eslint/js": "9.39.1",
		"@faker-js/faker": "^10.1.0",
		"@tailwindcss/postcss": "^4.1.17",
		"@testing-library/dom": "^10.4.1",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/dompurify": "^3.2.0",
		"@types/node": "^24.10.1",
		"@types/react": "19.2.6",
		"@types/react-dom": "19.2.3",
		"@vitejs/plugin-react": "5.1.1",
		"@vitest/coverage-v8": "^3.2.0",
		"@vitest/ui": "^3.2.0",
		"autoprefixer": "^10.4.22",
		"eslint": "9.39.1",
		"eslint-plugin-react-hooks": "7.0.1",
		"eslint-plugin-react-refresh": "0.4.24",
		"globals": "16.5.0",
		"jsdom": "^27.2.0",
		"postcss": "^8.5.6",
		"shadcn": "^3.5.0",
		"tailwindcss": "^4.1.17",
		"tailwindcss-animate": "^1.0.7",
		"tsx": "^4.20.6",
		"typescript": "5.9.3",
		"typescript-eslint": "8.47.0",
		"vite": "^7.2.2",
		"vitest": "^3.2.0",
		"wrangler": "^4.44.0"
	}
}
